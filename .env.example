# React Native iOS Simulator Ready - Environment Variables
# Copy this to .env and customize as needed

# ===========================================
# iOS SIMULATOR TESTING CONFIGURATION
# ===========================================

# Mock Auth - Set to 'true' for iOS Simulator testing
# This bypasses real authentication so you can test the full app UI
USE_MOCK_AUTH=true

# ===========================================
# API Configuration
# ===========================================
API_BASE_URL=http://localhost:3000/api
API_URL=https://api.example.com
API_KEY=your_api_key_here
API_TIMEOUT=30000

# ===========================================
# App Configuration
# ===========================================
APP_NAME=React Native Base
APP_ENV=development
APP_VERSION=1.0.0

# ===========================================
# Maps Configuration
# ===========================================
# NOTE: Apple Maps works WITHOUT an API key on iOS Simulator!
# Only set this if you want to use Google Maps instead
# GOOGLE_MAPS_API_KEY=your_google_maps_key

# ===========================================
# Feature Flags
# ===========================================
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
ENABLE_PERFORMANCE_MONITORING=false

# ===========================================
# Authentication (for production)
# ===========================================
AUTH_DOMAIN=your-auth-domain.com
AUTH_CLIENT_ID=your_client_id
AUTH_CLIENT_SECRET=your_client_secret

# ===========================================
# Third-party Services (for production)
# ===========================================
STRIPE_PUBLISHABLE_KEY=your_stripe_key
FIREBASE_API_KEY=your_firebase_key
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_APP_ID=your_app_id

# ===========================================
# Storage
# ===========================================
STORAGE_ENCRYPTION_KEY=your_encryption_key

# ===========================================
# Debugging
# ===========================================
DEBUG_MODE=true
LOG_LEVEL=debug

# ===========================================
# Social Auth (for production)
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id
APPLE_CLIENT_ID=your_apple_client_id
FACEBOOK_APP_ID=your_facebook_app_id

# ===========================================
# Push Notifications
# ===========================================
PUSH_NOTIFICATION_KEY=your_notification_key

# ===========================================
# Error Tracking & Analytics
# ===========================================
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development
MIXPANEL_TOKEN=your_mixpanel_token
GOOGLE_ANALYTICS_ID=your_ga_id
